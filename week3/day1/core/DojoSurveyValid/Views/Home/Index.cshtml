@{
    ViewData["Title"] = "Home Page";
}

@model Student
<div class="text-center">
        <div class="container-md mt-5">

            <form asp-action="Process" asp-controller="Home" method="post">
            <div class="form-group row m-1">
                <label asp-for="name" class="col-sm-2 col-form-label">Your Name</label>
                    <div class="col-sm-10">
                    <input   class="form-control" asp-for="name" >
                    </div>
                <span asp-validation-for="name" ></span>
            </div>
            <div class="form-group row m-1">
                <label for="location" class="col-sm-2 col-form-label">Dojo Location</label>
                <div class="col-sm-10">
                    <select class="form-select" aria-label="Default select example" asp-for="location">
                        
                        <option value="San Jose">San Jose</option>
                        <option value="Tunisia">Tunisia</option>
                        <option value="morocco">morocco</option>
                    </select>
                </div>
                <span asp-validation-for="location"></span>
            </div>
            <div class="form-group row m-1">
                <label asp-for="ln" class="col-sm-2 col-form-label">Favorite Language</label>
                <div class="col-sm-10" >
                        <select class="form-select" aria-label="Default select example" asp-for="ln">
                            
                            <option value="python">python</option>
                            <option value="JavaScript">JavaScript</option>
                            <option value="C#">C#</option>
                        </select>
                </div>
                <span asp-validation-for="ln"></span>
            </div>
            <div class="form-group row m-1">
                <label asp-for="comment" class="col-sm-2 col-form-label">Comment(Optional)</label>
                <div class="col-sm-10">
                <textarea asp-for="comment" class="form-control" ></textarea>
                </div>

                <span asp-validation-for="comment"></span>
                
            </div>
            <div class="button">
                <button type="submit" class="btn btn-primary" >Submit</button>
            </div>
            </form>
    </div>
</div>
