@{
    ViewData["Title"] = "Home Page";
}

@model User;

<div class="text-center">
   <div class="container-md mt-5">

        <form asp-action="Process" asp-controller="Home" method="post">
        <div class="form-group row m-1">
                <div class="col-sm-10" >
                   
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" ></span>
                        
                </div>
                
            </div>
        <div class="form-group row m-1">
                <div class="col-sm-10" >
                   
                        <label asp-for="EmailAddress"></label>
                        <input asp-for="EmailAddress" class="form-control">
                        <span asp-validation-for="EmailAddress" ></span>
                        
                </div>
                
        </div>

            <div class="form-group row m-1">
                <div class="col-sm-10" >
                   
                        <label asp-for="Date">Select a Date:</label>
                        <input asp-for="Date" class="form-control">
                        <span asp-validation-for="Date" ></span>
                        
                </div>
                
            </div>
        <div class="form-group row m-1">
                <div class="col-sm-10" >
                   
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" ></span>
                        
                </div>
                
        </div>
        <div class="form-group row m-1">
                <div class="col-sm-10" >
                   
                        <label asp-for="FavNumber"></label>
                        <input asp-for="FavNumber" class="form-control">
                        <span asp-validation-for="FavNumber" ></span>
                        
                </div>
                
        </div>
            <div class="button">
                <button type="submit" class="btn btn-primary" >Submit</button>
            </div>

            </form>

    </div>
</div>
