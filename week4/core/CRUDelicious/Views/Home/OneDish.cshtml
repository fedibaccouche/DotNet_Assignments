@{
    ViewData["Title"] = "Home Page";
}

@model  Dish
<div class="text-center">
    <h1 class="display-4">Add a new fish</h1>
     <div class="bar">
        
        <a href="/">Home</a>
        <p> |</p>
        <a href="/dishes/new">Add a Dish</a>
    </div>

       <div class="msg">
        <p>@Model.Name by @Model.Chef</p>
        <hr>
    </div>
    <div class="detail">
        <div class="mt-2">@Model.Description</div>
        <div class="mt-2"> Calories : @Model.Calories</div>
        <div class="mt-2"> Tastiness : @Model.Tastiness</div>
    </div>

    <div class="buttons">
        <form asp-action="Delete" asp-controller="Home" asp-route-id="@Model.DishId" method="post">
            <input type="submit" value="Delete" class="btn btn-danger">
        </form>
        <a href="@($"/dishes/{Model.DishId}/edit")" class="btn btn-primary"> Edit </a>
    </div>
