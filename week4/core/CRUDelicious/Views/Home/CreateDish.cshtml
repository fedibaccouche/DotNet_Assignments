@{
    ViewData["Title"] = "Home Page";
}

@model  Dish
<div class="text-center">
    <h1 class="display-4">Add a new fish</h1>
     <div class="bar">
        
        <a href="/">Home</a>
        <p> |</p>
        <p>Add a Dish</p>
    </div>
    
    <form asp-action="CreateDish" asp-controller="Home" method="post">
    <div class="form">
        <div >
            <div class="form-group">
                <label asp-for="Chef" >Chef's name</label>
                <input asp-for="Chef" class="form-control m-3">
                <div>
                <span asp-validation-for="Chef" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name">Dish's name</label>
                <input asp-for="Name" class="form-control m-2">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories" class="form-control m-2">
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness" class="form-select m-2">
                <option value=1>1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
             <span asp-validation-for="Tastiness" class="text-danger"></span>
        </div>
        <div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control m-2"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Fish" class="btn btn-primary pos">
            </div>
        </div>

    </div>
        
    </form>

</div>