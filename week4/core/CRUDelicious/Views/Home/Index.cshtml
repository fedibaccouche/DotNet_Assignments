@{
    ViewData["Title"] = "Home Page";
}

@model  List<Dish>
<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>

    <div class="bar">
        <p>Home</p>
        <p> |</p>
        <a href="/dishes/new">Add a dish</a>
    </div>

    <div class="msg">
        <div>Check out some recent dishes</div>
        <hr>
    </div>

    @foreach (var dish in Model)
    {   <div class="display">
            <div><a href="@($"/dishes/{dish.DishId}")">@dish.Name</a></div>
            <div>By @dish.Chef</div>
        </div>
    }
    
</div>
